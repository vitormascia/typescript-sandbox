{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.tabSize": 4,
    "eslint.workingDirectories": [{ "mode": "auto" }],
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
    ],
    "eslint.probe": [
        "javascript",
        "typescript"
    ],
}
