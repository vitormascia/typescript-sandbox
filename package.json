{
  "name": "sandbox",
  "version": "0.0.1",
  "description": "A personal sandbox for running JavaScript using the Node.js runtime, with TypeScript as a typed superset",
  "author": "Vitor Mascia",
  "private": true,
  "type": "module",
  "main": "./build/sandbox.js",
  "license": "UNLICENSED",
  "scripts": {
    "boot:ts": "tsx ./sandbox.ts",
    "boot-watch:ts": "tsx watch ./sandbox.ts",
    "boot:js": "node ./build/sandbox.js",
    "build": "npm run install-modules && npm run ts:compile && npm run lint:fix",
    "build:boot-watch:ts": "npm run api:build && npm run api:boot-watch:ts",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix && eslint --fix",
    "ts:compile": "rimraf build && tsc --pretty",
    "ts:compile-watch": "rimraf build && tsc --watch --pretty",
    "ts:check": "tsc --noEmit true --pretty",
    "test": "jest --detectOpenHandles --runInBand --logHeapUsage",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "install-modules": "npm ci",
    "reinstall-modules": "rimraf node_modules && npm ci"
  },
  "dependencies": {
    "async": "^3.2.6",
    "axios": "^1.10.0",
    "bignumber.js": "^9.3.1",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.0",
    "handlebars": "^4.7.8",
    "image-size": "^2.0.2",
    "lodash": "^4.17.21",
    "mime": "^4.0.7",
    "node-cron": "^4.2.1",
    "rimraf": "^6.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "eslint": "^9.31.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^30.0.4",
    "jest-mock": "^30.0.2",
    "tsx": "^4.20.3",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "@faker-js/faker": "^9.9.0",
    "@jest/types": "^30.0.1",
    "@stylistic/eslint-plugin": "^5.2.0",
    "@suites/unit": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@types/async": "^3.2.24",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.14",
    "@types/uuid": "^10.0.0"
  }
}
